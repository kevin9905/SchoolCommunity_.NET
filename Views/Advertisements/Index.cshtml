@model Assignment1.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";

}

<h1>Show advertisement for community @Model.Community.Title</h1>

<p>
    <a asp-action="Upload" asp-route-id="@Model.Community.id">Upload New</a>
</p>
@if (Model.Advertisements.Count() == 0)
{
    <p>There are no files to display.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(models => models.Advertisements.ElementAt(0).FileName)
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Advertisements)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <img src="@item.AdvertisementUrl" style="max-width: 400px;" />
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.AdvertisementId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Index" asp-controller="Communities">Back to List</a>
</div>
